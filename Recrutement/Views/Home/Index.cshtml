@model IEnumerable<Recrutement.Models.Categorie>

@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col">

        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/public/img/test1.jpg" />
                </div>

                <div class="item">
                    <img src="~/public/img/tes3.jpg" />
                </div>

                <div class="item">
                    <img src="~/public/img/tes2.jpg" />
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

<div class="jumbotron" style="margin-top:10px">
    <h3>Bienvenue Sur Notre Plateforme</h3>
    <p class="lead">ToDo</p>
    <p><a href="~/Home/About" class="btn btn-info btn-lg">Plus d'informations</a></p>
</div>


@foreach (var item in Model)
{
    <div class="panel panel-default" id="offre">
        <h1 class="panel-heading"> @Html.DisplayFor(modelItem => item.CategoryName)</h1>
        <h5> @Html.DisplayFor(modelItem => item.CategoryDescription)</h5>
        <div class="row">
            @foreach (var elt in item.Jobs)
            {

                <div class="col-md-3">
                    <img src="~/Uploads/@elt.JobImage" class="thumbnail  center-block" style="width:48px;height:48px;" />
                    <h3>@Html.DisplayFor(modelItem => elt.JobTitle)</h3>
                    <p>
                        @Html.DisplayFor(modelItem => elt.JobContent)
                    </p>
                    <p>@Html.ActionLink("Plus d'information", "Details", new { JobId = elt.Id }, new { @class = "btn btn-primary" }) </p>
                </div>


            }
        </div>
    </div>
}
