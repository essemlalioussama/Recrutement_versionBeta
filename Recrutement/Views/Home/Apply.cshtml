
@{
    ViewBag.Title = "Apply";
    Layout = "~/Views/shared/_MainLayout.cshtml";
}


@using (Html.BeginForm("Apply","Home",FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4 class="alert alert-info">Postuler Pour Cet offre</h4>
    <div>
        @{
            if (ViewBag.Result != null)
            {
                <h3 class="alert alert-danger"> @ViewBag.result</h3>
            }
        }
    </div>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Motivation :", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextArea("Message", htmlAttributes: new { @class = "form-control", rows = "5", cols = "15" })
            @Html.ValidationMessage("Message", "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Votre Cv :", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="upload" class="form-control" required/>
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Confirmer" class="btn btn-success" />
            @Html.ActionLink("Retour à l'accueil", "Index", null, new { @class = "btn btn-danger" })
        </div>
    </div>
</div>
}

