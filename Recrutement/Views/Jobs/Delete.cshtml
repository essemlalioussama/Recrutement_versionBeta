@model Recrutement.Models.Job

@{
    ViewBag.Title = "Supprimer";
    Layout = "~/Views/shared/_MainLayout.cshtml";
}


<h3 class="alert alert-danger">Voulez-vous vraiment supprimer cela?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt >
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobContent)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobContent)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobImage)
        </dt>

        <dd>
            <img src="~/Uploads/@Html.DisplayFor(model => model.JobImage)" class="thumbnail center-block" style="width:48px;height:48px;" />
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-danger" /> 
            @Html.ActionLink("Retour à la liste", "Index" ,null, new {@class="btn btn-warning" })
        </div>
    }
</div>
